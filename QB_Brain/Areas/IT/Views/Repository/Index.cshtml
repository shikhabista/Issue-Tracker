@model List<Base.Dtos.RepositoryDto>
@{
    Layout = "_Layout";
}

<div class="page-header d-print-none m-0">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <h2 class="page-title">
                    Projects
                </h2>
            </div>
        </div>
    </div>
</div>

<div class="page-body">
    <div class="container-xl">
        @foreach (var item in Model)
        {
            <div class="card mb-2">
                <div class="card-header">
                    <h3 class="card-title">
                        @item.Name <span class="badge badge-outline text-cyan ms-2"> @item.Visibility </span>
                    </h3>
                </div>
                <div class="card-body">
                    <div class="datagrid">
                        <div class="datagrid-item">
                            <div class="datagrid-title">User</div>
                            <div class="datagrid-content">@item.RecBy</div>
                        </div>
                        <div class="datagrid-item">
                            <div class="datagrid-title">About</div>
                            <div class="datagrid-content"> @item.Description</div>
                        </div>
                        <div class="datagrid-item">
                            <div class="datagrid-title">Issues</div>
                            <div class="datagrid-content">
                                <div class="btn-list">
                                    <a class="btn" asp-action="Index" asp-controller="Issue" asp-route-repositoryId="@item.Id">
                                        Total Issues
                                        <span class="badge bg-blue text-blue-fg ms-2">@item.TotalIssuesCount</span>
                                    </a>
                                    <button class="btn">
                                        Open Issues
                                        <span class="badge bg-lime text-lime-fg  ms-2">@item.TotalOpenIssuesCount</span>
                                    </button>
                                    <button class="btn">
                                        Closed Issues
                                        <span class="badge bg-red text-red-fg ms-2">@item.TotalClosedIssuesCount</span>
                                    </button>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="datagrid">
                        <div class="datagrid-item">
                            <div class="datagrid-content">
                                <a class="btn" asp-action="Edit" asp-controller="Repository" asp-area="IT" asp-route-id="@item.Id">Edit Project</a>
                                <a class="btn" asp-action="New" asp-controller="Issue" asp-area="IT" asp-route-repositoryId="@item.Id">Create New Issue</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }


    </div>
</div>